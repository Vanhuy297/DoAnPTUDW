@using DoAnPTUDW.Models;
@model IList<Slide>

<!-- Team Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="section-title text-center position-relative mb-5">
            <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Ngành học Hot</h6>
            <h1 class="display-4">Top những ngành học Hot nhất của Trường Đại học Vinh</h1>
        </div>
        <div class="owl-carousel team-carousel position-relative" style="padding: 0 30px;">
            @foreach (var item in Model)
            {
                <div class="team-item">
                    <img class="img-fluid w-100" src="@item.Images" alt="">
                    <div class="bg-light text-center p-4">
                        <h5 class="mb-3">@item.Title</h5>
                        <p class="mb-2">@item.Abstract</p>
                        <div class="d-flex justify-content-center">
                            <a class="mx-1 p-1" href="#"><i class="fab fa-twitter"></i></a>
                            <a class="mx-1 p-1" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="mx-1 p-1" href="#"><i class="fab fa-linkedin-in"></i></a>
                            <a class="mx-1 p-1" href="#"><i class="fab fa-instagram"></i></a>
                            <a class="mx-1 p-1" href="#"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
            } 
        </div>
    </div>
</div>
<!-- Team End --> 